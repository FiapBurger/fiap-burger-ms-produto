{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
  },
  "include": ["src", "tests"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}