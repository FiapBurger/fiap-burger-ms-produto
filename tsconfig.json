{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "baseUrl": "src",
    "rootDir": "./src"
  },
  "include": [
    "src",
    "tests/features/steps/**/*.ts",
    "./config/**/*",
    "./features/**/*",
    "./pageObjects/**/*",
    "./setup/**/*",
    "./stepDefinations/**/*",
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "tests"
  ]
}